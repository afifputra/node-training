<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <% if (orders.length <= 0) {  %> 
        <main>
            <h1>Nothing there!</h1>
        </main>
        <% } else { %>
            <ul>
                <% orders.forEach(order => { %>
                    <li>
                        <h1># <%= order.id  %> </h1>
                        <ul>
                            <% order.products.forEach(product => { %> 
                                <li>
                                    <%= product.title %> (<%= product.orderItem.quantity %>) 
                                </li>
                            <% }) %> 
                        </ul>
                    </li>
                <% }) %>
            </ul>
        <% } %> 
        <%- include('../includes/end.ejs') %>